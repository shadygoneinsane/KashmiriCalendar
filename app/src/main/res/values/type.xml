<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Inter.Medium" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textSize">@dimen/dimen_sp15</item>
    </style>

    <style name="TextAppearance.Inter.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
    </style>


    <style name="TextAppearance.Inter.SemiBold" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
    </style>

    <style name="TextAppearance.Inter.Medium.Body" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
    </style>

    <style name="TextAppearance.BottomNavigation" parent="TextAppearance.Inter.SemiBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_sp12</item>
    </style>
</resources>
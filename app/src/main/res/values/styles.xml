<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextParent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorTextPrimary2</item>
        <item name="fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="TextSubHeader" parent="TextParent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextVSmall" parent="TextParent">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="TextSmall" parent="TextParent">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextESmall" parent="TextParent">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="labelVisibilityMode">selected</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigation</item>
    </style>
</resources>
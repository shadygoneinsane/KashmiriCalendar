<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedAttribute">

    <data>

        <variable
            name="aarti"
            type="koushur.kashmirievents.presentation.ui.main.featured.FeaturedViewModel.Aarti" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_4dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="@dimen/dimen_sp28"
            android:autoSizeMinTextSize="@dimen/dimen_sp19"
            android:lineSpacingExtra="2dp"
            android:text="@{aarti.aartiString}"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_sp19"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/item_ganeshaarti" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>